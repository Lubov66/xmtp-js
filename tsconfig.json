{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom"],
    "sourceMap": true,
    "noEmit": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "bench/**/*", "build/**/*"]
}
